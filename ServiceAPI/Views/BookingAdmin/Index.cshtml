@model IEnumerable<ACP.Business.Models.BookingModel>
<link href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css"
      rel="stylesheet" type="text/css">
@Styles.Render("~/Content/theme-bootstrap")
@Scripts.Render("~/bundles/modernizr")
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-info">
                    <i class="fa fa-1x fa-fw fa-barcode text-success"></i>Bookings
                </h3>
            </div>
        </div>
        <table class="table">
            <tr>                
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Modified)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    Payment
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SourceCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AgentReference)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookingReference)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Message)
                </th>
                <th>
                   
                </th>
                <th>

                </th>
                <th>
                    <a href="@Url.Action("Create","BookingAdmin")"><i class="fa fa-2x fa-fw fa-plus text-success"></i></a>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>               
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td> 
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modified)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @{
                            if (item.Status == ACP.Business.Enums.StatusType.Paid)
                            {
                                <div class="alert-success">Paid</div>
                            }
                            else if (item.Status == ACP.Business.Enums.StatusType.Processing)
                            {
                                <div class="alert-warning">Processing</div>
                            }
                            else
                            {
                                <div class="alert-warning">Not paid</div>
                            }

                        }
                                   
                                </td>
            
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.SourceCode)
                                </td>
            
                                <td>
                                    @Html.DisplayFor(modelItem => item.AgentReference)
                                </td>
            
                                <td>
                                    @Html.DisplayFor(modelItem => item.BookingReference)
                                </td>
            
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cost)
                                </td>
            
                                <td>
                                    @Html.DisplayFor(modelItem => item.Message)
                                </td>
            
                                <td>
            
                                    <a href="@Url.Action("Details", "BookingAdmin", new { id=item.Id })" class="btn">
                            <span class="fa fa-2x fa-fw fa-th-large text-primary"></span>
                        </a>
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "BookingAdmin", new { id=item.Id })" class="btn">
                            <span class="fa fa-2x fa-edit fa-fw text-success"></span>
                        </a>
                    </td>
                    <td>
                        <a href="@Url.Action("Delete", "BookingAdmin", new { id=item.Id })" class="btn">
                            <span class="fa fa-2x fa-fw fa-close text-danger"></span>
                        </a>
                    </td>
                    @*<td>
                        <div class="container">
                            <div class="row">
                                <div class="col-md-4">
                                   
                                </div>
                                <div class="col-md-4">
                                    <div>
                                        <a href="@Url.Action("Edit", "BookingAdmin", new { id=item.Id })" class="btn">
                                            <span class="fa fa-2x fa-edit fa-fw text-success"></span>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <a href="@Url.Action("Delete", "BookingAdmin", new { id=item.Id })" class="btn">
                                        <span class="fa fa-2x fa-fw fa-close text-danger"></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </td>*@
                </tr>
            }

        </table>
        </div>
</div>