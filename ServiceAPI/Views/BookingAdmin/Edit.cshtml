<script>
    $("#bankdetails").hide();
    $("#creditcard").hide();
    $("#paymenttype").change(function () {
        $("#paymenttype option:selected").each(function () {
            var str = "";
            str += $(this).text();
            if (str === "Credit Card") {
                $("#bankdetails").hide();
                $("#creditcard").show();
            }
            else {
                $("#bankdetails").show();
                $("#creditcard").hide();
            }

        });
    });
    var option = $("#paymenttype option:selected").text();

    if (option === "Credit Card") {
        $("#bankdetails").hide();
        $("#creditcard").show();
    }
    else {
        $("#bankdetails").show();
        $("#creditcard").hide();
    }

</script>