<script>
    $("#bankdetails").hide();
    $("#creditcard").hide();
    $("#paymenttype").change(function () {
        $("#paymenttype option:selected").each(function () {
            var str = "";
            str += $(this).text();
            if (str === "Credit Card") {
                $("#bankdetails").hide();
                $("#creditcard").show();
            }
            else {
                $("#bankdetails").show();
                $("#creditcard").hide();
            }

        });
    });
    $("#carpark").change(function () {
        var value = $(this).val();
        if (value !== 0) {
            $("#Price").val(0);
            $("#currentprice").html("");

            $.ajax({
                url: 'Results',
                type: 'GET',
                data: {
                    Id: value,
                    DropOffDate: $('#EndDate').val(),
                    ReturnDate: $('#StartDate').val()
                },
                success: function (data) {
                    $("#Price").val(data.Pricing[0].Price);
                    $("#currentprice").html("Total Price:  £" + data.Pricing[0].Price);
                },
                error: function (error) {
                    alert(error);
                }
            });
        }
    });



</script>
