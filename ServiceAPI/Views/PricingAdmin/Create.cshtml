<script>
    $(".correct-dates").hide();
    $(".btn-primary").addClass("disabled");

    $("#Start").change(function () {
        if ($("#Start").val() && $("#End").val())
        {
            
            if (new Date($("#End").val()) <= new Date($("#Start").val())) {
                $(".correct-dates").show();
                $(".btn-primary").addClass("disabled");
             
            } else {
                $(".correct-dates").hide();
                $(".btn-primary").removeClass("disabled");
            }
        } 
    });

    $("#End").change(function () {
        if ($("#Start").val() && $("#End").val())
        {
            
            if (new Date($("#End").val()) <= new Date($("#Start").val())) {
                $(".correct-dates").show();
                $(".btn-primary").addClass("disabled");
             
            } else {
