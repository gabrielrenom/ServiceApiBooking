@using Web.Models
@model ContactUsViewModel
@{
    ViewBag.Title = "Contac Us";
    Layout = "~/Views/Shared/_NPSLayout.cshtml";
}


<div class="container-fluid banner-img for-login">
    <div class="container">
        <div class="customer-login">
            <div class="">
                <div class="customer-login">
                    <div class="row returning-customer">
                        @{
                            if (Model.Confirmation == null)
                            {
                                <label class="paid">Contact Us </label>
                            }
                            else
                            {
                                <label class="paid">Comments sent </label>
                            }
                        }
                        
                    </div>
                    <div class="row all-customer-details">
                        <div class="col-md-6 payment-received">
                            @{ if (Model.Confirmation != null)
                                {
                                    <h2>@Model.Confirmation</h2>
                                }
                                else
                                {
                                    <h2>For more information,Contact Us! </h2>
                                                                <form method="post" action="contactus">

                                                                    <div class="form-group row">
                                                                        <label class="col-sm-4" for="Name">Name:</label>
                                                                        <div class="col-sm-8">
                                                                            <input type="text" id="Name" name="Name" class="form-control color5" placeholder="ie: John Smith" />
                                                                            @Html.ValidationMessageFor(model => model.Name, "The name is required", new { @class = "text-danger" })
                                                                        </div>

                                                                    </div>
                                                                    <div class="form-group row">
                                                                        <label for="date" class="col-sm-4">Email:</label>
                                                                        <div class="col-sm-8">
                                                                            <input type="text" id="Email" name="Email" class="form-control color5" placeholder="ie: xxxxxxx@gmail.com" />
                                                                            @Html.ValidationMessageFor(model => model.Email, "The email is required", new { @class = "text-danger" })
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group row">
                                                                        <label class="col-sm-4" for="input">Comments:</label>
                                                                        <div class="col-sm-8">
                                                                            <textarea class="form-control" id="Comments" name="Comments" rows="5" placeholder="Insert your comments"></textarea>
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group row">
                                                                        <div class="col-lg-4"></div>
                                                                        <div class="col-sm-8">
                                                                            <button class="btn btn-default" type="submit">Send</button>
                                                                        </div>
                                                                    </div>
                                                                </form>
                                }
                            }

                        </div>
                        <div class="col-md-6 even-more">
                            <div class="col-lg-8 col-md-8 col-sm-5 banner banner1">
                                <div class="mensaje">
                                    <span>GET EXCLUSIVE OFFERS</span>
                                    <a class="btn btn-primary btn-lg" href="#" role="button">LEARN MORE</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  
    <div class="row">
        <div class="col-lg-10"><br /><br /><br /><br /><br /><br /><br /><br /></div>
    </div>
</div>
    
