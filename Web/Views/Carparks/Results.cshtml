
@model List<Web.Models.ResultsView>
@{
    ViewBag.BodyType = "quelinka booking";
}
	
  <div class="container-fluid banner-img for-booking">
    <div class="container">

        <div class="row booking">

            <!-- This is a preview:
            <img src="img/booking-preview.jpg" width="1096" height="712" class="preview-img" title="Clicking on +info triggers the pop-up" data-toggle="modal" data-target="#plusInfo">
             -->

            <div class="col-md-3 by-parking-type">
                @*FILTERS FOR PARKING*@
                @*START*@
                @Html.Partial("FilterPartialView", Model)
                @*END*@
            </div>

            <div class="col-md-9 filter-results">
                <div class="results-quote-form">
                    @*FORM TO BOOK THE PARKING*@
                    @*START*@
                    @Html.Partial("BookingPartialView")
                    @*END*@
                </div>

                @foreach (var result in Model)
                {
                            <!-- Results loop begins  -----------------------------------------------------      -->
                            <!-- Result row begins -->

                    <div class="row result-row">
                        <div class="col-md-4 col-sm-4 col-xs-4 airport manchester-airport">
                            <h3>@result.Company</h3>
                        </div>
                        <div class="col-md-8 col-sm-8 col-xs-8 result-info">
                            <div class="result-form">
                                <form role="form" class="row">
                                    <div class="form-group col-md-8 result-options">
                                        <ul class="list-inline for-time-and-distance">
                                            <li class="time">
                                                <i class="fa fa-bus fa-2x"></i>
                                                @result.TransferTime minutes transfer
                                            </li>
                                            <li class="map">
                                                <i class="fa fa-map-marker fa-2x"></i>
                                                @result.DistanceFromAirport
                                                @if (@result.DistanceFromAirport == 1)
                                                {
                                                    @Html.Raw("mile")
                                                }
                                                else { @Html.Raw("miles")
                                                } from the airport
                                            </li>
                                        </ul>
                                        <p class="result-data">
                                             @{ 
                                                 var description = "";
                                                 if (@result.Description != null)
                                                 {
                                                     description = result.Description.Substring(0, 120) + "...[find out more]";
                                                  
                                                  }
                                              }
                                               @description
                                        </p>
                                        <div class="options">
                                            <span><input type="checkbox" value="24 hours security" name="checked" checked="@result.Is24hSecurity"> 24 hours security </span>
                                            <span><input type="checkbox" value="Family friendly" name="checked" checked="@result.IsFamilyFriendly"> Family friendly </span>
                                            <span><input type="checkbox" value="You retain keys" name="checked" checked="@result.IsRetainKeys"> You retain keys </span>
                                            <span><input type="checkbox" value="Regular transfers" name="checked" checked="@result.IsRegularTransfers"> Regular transfers</span>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-4 result-actions">
                                        <span class="result-price"><i class="currency">&pound;</i> @result.Price</span>
                                        <button type="submit" class="btn">Book now</button>
                                        <ul class="list-inline for-info-and-map">
                                            <li class="moreinfo">
                                                <a data-toggle="modal" data-target="#plusInfo" href="#">
                                                    <i class="fa fa-plus-circle fa-lg"></i>
                                                    Info
                                                </a>
                                            </li>
                                            <li class="map">
                                                <a href="#">
                                                    <i class="fa fa-map-marker fa-lg"></i>
                                                    Map
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>                

                }
            

                <!-- Result row ends -->
                <!-- Results loop ends  -----------------------------------------------------      -->


            </div>


        </div>


    </div>
</div>


