@model List<Web.Models.ResultsView>

<h2>Filter results by parking type</h2>
<div class="types">
    <span><input type="radio" value="All" name="checked" checked> All (<span class="counter">@Model.Count</span>) </span>
    <span><input type="radio" value="Park and Ride" name="checked"> Park and Ride (<span class="counter">@Model.Where(x => x.IsParkAndRide == true).ToList().Count </span>)</span>
    <span><input type="radio" value="Meet and Greet" name="checked"> Meet and Greet (<span class="counter">@Model.Where(x => x.IsMeetAndGreet == true).ToList().Count</span>)</span>
    <span><input type="radio" value="On-Airport" name="checked"> On-Airport (<span class="counter">@Model.Where(x => x.IsOnAirport == true).ToList().Count</span>)</span>
</div>
<select name="TERMINALS" class="form-control terminals back1 color4">
    <option selected>Terminals</option>
    <option>North</option>
    <option>East</option>
    <option>South</option>
    <option>West</option>
</select>
